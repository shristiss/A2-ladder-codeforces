#include<iostream>
using namespace std;
int main()
{
    int counte=0,counto=0,x,y;
    int n,num;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        cin>>num;
        if(num%2==0)
        {
            counte++;
            x=i;
        }
        else {
            counto++;
            y=i;
        }
    }
    if(counto==1)
    cout<<y<<endl;
    else cout<<x<<endl;
}
