#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    int n;
    cin>>n; //no of words
   string s;
   while(n--)
   {
       cin>>s;
       if(s.length()>10)
       {
           char a=s[0];
           char b=s[s.length()-1];
           cout<<a<<s.length()-2<<b<<endl;
       }
       else cout<<s<<endl;
   }
   return 0;
}
